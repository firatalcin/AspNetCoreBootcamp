@model List<UserInfo>

@{
    ViewData["Title"] = "List";
}

<main class="text-center">
    <h1>Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad-Soyad</th>
                <th>Katılım Durumu</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>

            @{ int i = 0;}

            @foreach (var item in Model)
            {
                var durum = item.WillAttend == true ? "Evet" : "Hayır";
                var className = item.WillAttend == true ? "table-success" : "table-danger";

                if(item.WillAttend == true)
                {
                    i++;
                }

                <tr class="@className">
                    <td>@item.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/Meeting/Details/@item.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı : @i</span>
        </div>
    </div>
</main>



