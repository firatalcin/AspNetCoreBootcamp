@model Course

<div class="card mb-3" id="kurs_@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/@Model.Image" width="200" alt="resim" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="/Course/Detail/@Model.Id">
                    <h5>@Model.Title</h5>
                </a>              
                <p>@Model.Description</p>
            </div>                      
        </div>
    </div>
</div>