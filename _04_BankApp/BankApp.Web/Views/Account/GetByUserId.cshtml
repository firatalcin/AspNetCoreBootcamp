@model List<AccounListModel>
@{
    ViewData["Title"] = "GetByUserId";
}

<div>
    <div class="col-6 mt-4">
        <h5 class="card-title">Kullanıcı Bilgileri</h5>
        <div class="card">
            <div class="card-body">
                <p class="card-text">Ad : @ViewBag.FullName</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Kullanıcı Listesine Geri Dön</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5>Hesap Bilgileri</h5>

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Hesap Numarası: @item.AccountNumber</h5>
                        <p class="card-text">Bakiye: @item.Balance</p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-id="@item.Id" class="btn btn-primary">Para Gönder</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class=" alert alert-info text-center">
                <p class="lead">
                    Kullanıcının hesabı bulunmamaktadır.
                </p>
            </div>

        }
    </div>
</div>

